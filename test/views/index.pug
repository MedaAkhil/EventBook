doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Home Page

  body
    .container
      h2 Home Page
      if user
        p Welcome, #{user.username}!
        a(href="/logout") Logout
      else
        p You are not logged in.
        a(href="/login") Login
